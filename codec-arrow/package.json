{
  "name": "@aspect-ipc/codec-arrow",
  "version": "0.0.0",
  "description": "Apache Arrow IPC codec for @aspect-ipc/transport.",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "clean": "rimraf dist \"*.tsbuildinfo\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run"
  },
  "dependencies": {
    "@aspect-ipc/transport": "workspace:*"
  },
  "peerDependencies": {
    "apache-arrow": "^21.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "apache-arrow": "^21.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
