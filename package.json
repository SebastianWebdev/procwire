{
  "name": "@procwire/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for @procwire/* packages.",
  "scripts": {
    "clean": "pnpm -r --if-present run clean && rimraf \"**/dist\" \"**/*.tsbuildinfo\" \"**/coverage\"",
    "typecheck": "pnpm --filter \"!astro-docs\" --if-present run typecheck",
    "build": "pnpm --filter \"!astro-docs\" --filter \"!.\" build",
    "test": "pnpm --filter \"!astro-docs\" --if-present run test",
    "lint": "eslint .",
    "format": "prettier -w .",
    "ci": "pnpm lint && pnpm build && pnpm typecheck && pnpm test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.28.1",
  "keywords": [
    "ipc",
    "node",
    "typescript",
    "monorepo"
  ],
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  }
}
