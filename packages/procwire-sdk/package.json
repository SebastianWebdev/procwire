{
  "name": "@procwire/sdk",
  "version": "1.0.0",
  "description": "Procwire SDK for Node.js - build IPC workers with ease",
  "keywords": [
    "procwire",
    "ipc",
    "worker",
    "sdk",
    "electron",
    "rpc",
    "json-rpc",
    "inter-process-communication",
    "node",
    "typescript"
  ],
  "author": "Sebastian Webdev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebastianWebdev/procwire.git",
    "directory": "packages/procwire-sdk"
  },
  "bugs": {
    "url": "https://github.com/SebastianWebdev/procwire/issues"
  },
  "homepage": "https://www.procwire.dev",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "rimraf dist \"*.tsbuildinfo\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:integration": "vitest run test/integration/",
    "test:fixtures": "npx tsx test/integration/fixtures/echo-worker.ts"
  },
  "peerDependencies": {
    "@procwire/transport": "^0.4.0"
  },
  "peerDependenciesMeta": {
    "@procwire/codec-msgpack": {
      "optional": true
    },
    "@procwire/codec-arrow": {
      "optional": true
    }
  },
  "devDependencies": {
    "@procwire/transport": "workspace:*",
    "@types/node": "^22.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
